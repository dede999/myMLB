<%= form_for(match) do |f| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% home, away = get_score %>
  <% @match.h_score ||= home %>
  <% @match.a_score ||= away %>
  <% h = Team.find_by_name @match.home %>
  <% a = Team.find_by_name @match.away %>

  <div class="field">
    <%= f.label :away %>
    <%= f.text_area :away %>
  </div>

  <div class="field">
    <%= f.label :a_score %>
    <%= f.number_field :a_score %>
  </div>

  <div class="field">
    <%= f.label :home %>
    <%= f.text_area :home %>
  </div>

  <div class="field">
    <%= f.label :h_score %>
    <%= f.number_field :h_score %>
  </div>

  <div class="field">
    <%= f.label :week %>
    <%= f.number_field :week %>
  </div>

  <div class="actions">
    <%
      unless @match.happened
        h.increment!(:pf, home)
        h.increment!(:pa, away)
        h.increment!(:diff, h.pf - h.pa)
        a.increment!(:pf, away)
        a.increment!(:pa, home)
        a.increment!(:diff, a.pf - a.pa)
        if home > away # hw, al
          h.increment!(:hw)
          h.increment!(:win)
          a.increment!(:al)
          a.increment!(:loss)
        else # hl, aw
          a.increment!(:aw)
          a.increment!(:win)
          h.increment!(:hl)
          h.increment!(:loss)
        end
        home_total = (1000*h.win)/(h.win + h.loss)
        h.increment!(:avg, home_total - h.avg)
        home_avg = (1000*h.hw)/(h.hw + h.hl)
        h.increment!(:h_avg, home_avg - h.h_avg)
        away_total = (1000*a.win)/(a.win + a.loss)
        a.increment!(:avg, away_total - a.avg)
        away_avg = (1000*a.aw)/(a.aw + a.al)
        a.increment!(:a_avg, away_avg - a.a_avg)
        h.save!
        a.save!
        @match.happened = TRUE
      end
    %>
    <%= f.submit %>
  </div>
<% end %>
