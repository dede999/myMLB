<h1>Schedule 2018</h1>

<div class="container">

  <% i = 1 %>
  <% @schedule.each do |sc| %>
    <table class="highlight" style="align-content: center">
      <thead>
        <tr>
          <td style="text-align: center"> Away </td>
          <td style="text-align: center" colspan="2"> Score </td>
          <td style="text-align: center"> Home </td>
          <td style="text-align: center"> Week <%= i %> </td>
        </tr>
      </thead>
      <tbody>
        <%= render sc %>
        <% i += 1 %>
      </tbody>
    </table>
  <% end %>

</div>