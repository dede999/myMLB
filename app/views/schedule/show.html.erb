<h1>Schedule 2018</h1>

<div class="container">

  <% i = 1 %>
  <% @schedule.each do |sc| %>
    <table class="highlight" style="align-content: center">
      <thead>
        <tr>
          <th style="text-align: center"> Away </th>
          <th style="text-align: center" colspan="2"> Score </th>
          <th style="text-align: center"> Home </th>
          <th style="text-align: center"> Week <%= i %> </th>
        </tr>
      </thead>
      <tbody>
        <%= render sc %>
        <% i += 1 %>
      </tbody>
    </table>
  <% end %>

  <% i = 1 %>
  <% @played.each do |sc| %>
    <table class="highlight" style="align-content: center">
      <thead>
      <tr>
        <th style="text-align: center"> Away </th>
        <th style="text-align: center" colspan="2"> Score </th>
        <th style="text-align: center"> Home </th>
        <th style="text-align: center"> Week <%= i %> </th>
      </tr>
      </thead>
      <tbody>
      <%= render sc %>
      <% i += 1 %>
      </tbody>
    </table>
  <% end %>

</div>